<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2>Our Products <small>Trends Products</small></h2>
        </div>
    </div>
</div>

<div class="row product-container">
    @foreach (var item in Model.ListOfProducts)
    {
        <div class="col-md-3 col-sm-3 colxs-6" style="margin-bottom:8px">
            <div class="thumbnail product-item" style="height:300px">
                <img class="img-responsive" title="Click to view detail"
                     style="cursor:pointer; height:160px; width:100%"
                     src="~/ProductImages/@item.ProductImage" />
                <div class="caption">
                    <h5>@item.ProductName</h5>
                    <p>@item.Price</p>




                    @if (item.Quantity > 0)
                    {
                        using (Html.BeginForm("AddToCart", "Home", new { productId = item.ProductId }, FormMethod.Post))
                        {
                            <button type="submit" class="pull-right"><i class="fa fa-shopping-cart"></i></button>
                        }
                        <p>Available</p>
                    }
                    else
                    {
                        <p>Not in Stock</p>
                    }

                    <div class="product-item-badge">
                        @if (item.IsFeatured == true)
                        {
                            <p>New</p>
                        }
                        else
                        {
                            <p></p>
                        }


                    </div>
                </div>
            </div>
        </div>
    }

</div>

<div class="container">
    @Html.PagedListPager(Model.ListOfProducts, page => Url.Action("HomePage", new { page, search = Request.QueryString["search"] }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayItemSliceAndTotal = true })
</div>
