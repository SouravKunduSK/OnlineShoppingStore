@model MyOnlineShoppingStore.Models.Location
@{
    ViewBag.Title = "UpdateLocation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
<!-- Breadcrumbs-->

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">My Shop</a>
    </li>
    <li class="breadcrumb-item ">Categories</li>
    <li class="breadcrumb-item active">Add New District</li>


</ol>
<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Add New District

    </div>
    <div class="card-body">
        @using (Html.BeginForm("UpdateLocation", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(m => m.LocationId)

            <div class="form-group">
                <label class="control-label">District Name</label>

                @Html.TextBoxFor(m => m.LocationName, new { @class = "form-control", placeholder = "Enter District Name", required = "required", autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.LocationName, "", new { @class = "text-danger" })
            </div>

            <a onclick="window.history.back();" class="btn btn-danger">Cancel</a>
            <input type="submit" class="btn btn-primary" value="Save" />
        }
    </div>
</div>
</div>
