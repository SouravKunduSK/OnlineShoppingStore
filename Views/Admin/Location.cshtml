@model List<OnlineShoppingStore.DAL.tbl_Location>
@{
    ViewBag.Title = "Location";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Location</li>
    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Location Details
            <a href="../Admin/AddLocation" class="btn btn-info pull-right fa fa-plus">Add New</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>District Name</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Sr. No.</th>
                            <th>District Name</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            //int count = 1;
                        <tr>
                            <td>@(Model.IndexOf(item)+1)</td>
                            <td>@item.LocationName</td>
                            
                            <td>

            @Html.ActionLink("Edit", "LocationEdit", new { locId = item.LocationId })
        </td>

                        </tr>
                            //count++;
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>