@model MyOnlineShoppingStore.Database.Tbl_Location

@{
    ViewBag.Title = "LocationEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Edit District Name</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.LocationId)


            <div class="form-group">

                @*@Html.LabelFor(model => model.LocationName, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    <h6>District Name</h6>
                    @Html.EditorFor(model => model.LocationName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LocationName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
     }
</div>